	<!-- The Basics -->
	<groupId>org.GeoRaptor</groupId>
	<artifactId>GeoRaptor</artifactId>
	<version>20.0.0-SNAPSHOT</version>
	<packaging>bundle</packaging>
	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
		<jdk.version>1.8</jdk.version>
		<final.name>GeoRaptor</final.name>
	</properties>
	<profiles>
		<profile>
			<id>windows</id>
			<activation>
				<os>
					<family>Windows</family>
				</os>
			</activation>
			<properties>
				<sqldev.basedir>D:\github\sqldeveloper</sqldev.basedir>
			</properties>
		</profile>
		<profile>
			<id>macos</id>
			<activation>
				<os>
					<family>mac</family>
				</os>
			</activation>
			<properties>
				<sqldev.basedir>/Applications/SQLDeveloper19.1.0.app/Contents/Resources/sqldeveloper</sqldev.basedir>
			</properties>
		</profile>
		<profile>
			<id>linux</id>
			<activation>
				<os>
					<family>Linux</family>
				</os>
			</activation>
			<properties>
				<sqldev.basedir>/opt/java/sqldeveloper</sqldev.basedir>
			</properties>
		</profile>
	</profiles>

